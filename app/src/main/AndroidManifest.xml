<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shixun">

    <uses-permission android:name="android.permission.INTERNET" /> <!-- 获取手机网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 读取sd卡图片 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- SD卡缓存图片 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".apps.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".GoodsDescActivity"></activity>
        <activity android:name=".base.BaseActivity"></activity>
        <activity android:name=".view.home.activity.BrandActivity"></activity>
       <activity android:name=".view.classify.activity.SortDetailActivity"></activity>
        <activity android:name=".view.Cart.GoodInfoActivity"></activity>
        <activity android:name=".base.RxActivity"></activity>
        <activity android:name=".view.login.LoginActivity"></activity>
        <activity android:name=".view.login.RegisterActivity"></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data android:name="android.webkit.WebView.EnableSafeBrowsing" android:value="true"/>
    </application>

</manifest>